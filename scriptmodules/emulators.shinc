    unzip projmd-20120429.zip
    if [[ ! -f $rootdir/roms/megadrive/projmd-20120429.bin ]]; then
        cp ./projmd-20120429/projmd-20120429.bin $rootdir/roms/megadrive/
    fi
    rm -rf projmd-20120429    
    rm projmd-20120429.zip  
}

